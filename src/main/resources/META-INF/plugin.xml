<idea-plugin>
  <id>info.rayden.voldeskine.dependencies</id>
  <name>Clear Dependencies</name>
  <version>1.2</version>
  <vendor email="andrei.sedelnikov@gmail.com" url="https://github.com/raydenvoldeskine/clear-dependencies-plugin-kt">Andy Victors</vendor>

  <description><![CDATA[
      Shows classes on which currently open Java class depends on as well as classes which depend on this one.
    ]]></description>

  <depends>com.intellij.modules.platform</depends>

  <idea-version since-build="182.0"/>

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="Dependencies"
                icon="/Resources/plus.png"
                anchor="right"
                factoryClass="DependenciesToolWindowFactory"/>

  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>