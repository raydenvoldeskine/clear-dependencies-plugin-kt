<idea-plugin>
    <id>com.github.raydenvoldeskine.cleardependenciespluginkt</id>
    <name>clear-dependencies-plugin-kt</name>
    <vendor>raydenvoldeskine</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.raydenvoldeskine.cleardependenciespluginkt.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.raydenvoldeskine.cleardependenciespluginkt.services.MyProjectService"/>
    </extensions>

    <projectListeners>
        <listener class="com.github.raydenvoldeskine.cleardependenciespluginkt.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>
</idea-plugin>
